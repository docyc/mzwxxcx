.serch{
    border-top:2px solid #ccc;
}
.serch input{
    width: 705rpx;
    height: 60rpx;
    border-radius: 6rpx;
    border:2rpx solid #ccc;
    margin:20rpx auto;
    box-shadow: 0 0 3rpx #ccc;
    text-align: center;
    font-size: 28rpx;
    background-color: #fff;
}

.content{

}
.box{
    display:flex;
    flex-direction:column;
    align-items:center;
    width: 750rpx;
    padding-top: 15rpx;
    background-color: #FFF;
    margin-bottom:20rpx;
}
.box .picture{
    width: 720rpx;
    height: 250rpx;
}
.box .picture image{
    width: 100%;
    height: 100%;
}
.box .info{
    display:flex;
    width: 720rpx;
    /* height: 100rpx; */
}
.box .info .left{
    flex:1;
    padding-top:10rpx;
    padding-bottom:10rpx;
    font-size:32rpx;
}
.box .info .title{
    font-size:32rpx;
}
.box .info .description{
    display:block;
    font-size:24rpx;
    color:#666;
}
.box .info .right text{
    /* height: 52rpx; */
    font-size:60rpx;
    font-weight: 500;
    margin:8rpx 0;
    color:#f60;
    /* background-color: #f60; */
    display: inline-block;
}
.box .info .right text.i{
    font-size:32rpx;
    color:#666;
}

